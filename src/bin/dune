(library 
  (name cli_helpers)
  (modules cli_helpers)
)

(executable
  (name cli)
  (public_name ligo)
  (libraries
    simple_utils
    cmdliner
    cli_helpers
    ligo
  )
  (package ligo)
  (preprocess
    (pps ppx_let)
  )
  (modules cli)
  (flags (:standard -open Simple_utils))
)

