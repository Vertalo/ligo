(ocamllex Lexer)

(library
  (name parser_shared)
  (public_name ligo.parser.shared)
  (libraries
    simple-utils
    uutf
    getopt
    zarith
  )
  (preprocess
    (pps bisect_ppx --conditional)
  )
  (modules
    Lexer
    LexerLog
    Utils
    Markup
    FQueue
    EvalOpt
    Version  
    ))


(rule
  (targets Version.ml)
  (action
    (progn (run "sh" "-c" "printf 'let version = \"%s\"'\\\\n \"$(echo UNKNOWN)\" > Version.ml")))
  (mode (promote (until-clean) (only *))))
