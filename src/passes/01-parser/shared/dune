(ocamllex Lexer)

(library
  (name parser_shared)
  (public_name ligo.parser.shared)
  (libraries
    menhirLib
    simple-utils
    uutf
    getopt
    zarith
    Preprocessor)
  (preprocess
    (pps bisect_ppx --conditional))
  (modules
    LexerLib
    LexerUnit
    ParserUnit
    ParserAPI
    Lexer
    LexerLog
    Markup
    Utils
    FQueue
    EvalOpt
    Version))

(rule
  (targets Version.ml)
  (action
    (progn (run "sh" "-c" "printf 'let version = \"%s\"'\\\\n \"$(echo UNKNOWN)\" > Version.ml")))
  (mode (promote (until-clean) (only *))))
