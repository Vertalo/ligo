license: "MIT"
depends: [
  "ocamlfind" { build }
  "dune" { build & >= "1.0.1" & < "1.7" } ## Incompatible with lwt<4
  "bigstring"
  "hex"
  "ocplib-endian"
  "re"
  "lwt" { < "4" }
  "zarith"
  "alcotest" { with-test }
  "ocp-indent" { with-test & = "1.6.1" }
]
build: [
  [ "dune" "build" "-p" name "-j" jobs ]
  [ "mv" "src/lib_stdlib/tezos-stdlib.install" "." ]
]
run-test: [
  [ "dune" "runtest" "-p" name "-j" jobs ]
]
url {
  src: "https://gitlab.com/gabriel.alfour/tezos-modded/-/archive/master/tezos-modded.tar.gz"
}
