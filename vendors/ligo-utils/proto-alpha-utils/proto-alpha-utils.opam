opam-version: "2.0"
name: "proto-alpha-utils"
version: "dev"
synopsis: "LIGO Proto Alpha-specific Utilities, to be used by other libraries"
maintainer: "Galfour <ligolang@gmail.com>"
authors: "Galfour <ligolang@gmail.com>"
license: "MIT"
homepage: "https://gitlab.com/ligolang/ligo-utils"
bug-reports: "https://gitlab.com/ligolang/ligo-utils/issues"
depends: [
  "dune"
  "base"
  "base"
  "bigstring"
  "calendar"
  "cohttp-lwt-unix"
  "cstruct"
  "ezjsonm"
  "hex"
  "hidapi"
  # opam does not handle tezos' constraints well (why?)
  "ipaddr" { >= "3.1.0" & < "4.0.0" }
  "macaddr" { >= "3.1.0" & < "4.0.0" }
  "irmin"
  "js_of_ocaml"
  "lwt"
  "lwt_log"
  "mtime"
  "ocplib-endian"
  "ocp-ocamlres"
  "re"
  "rresult"
  "stdio"
  "uri"
  "uutf"
  # tezos does not constrain their required version
  "zarith" {= "1.7"}
  "ocplib-json-typed"
  "ocplib-json-typed-bson"
  "tezos-crypto"
  "tezos-stdlib-unix"
  "tezos-data-encoding"
  "tezos-protocol-environment"
  "tezos-protocol-alpha"
  "tezos-protocol-alpha-parameters"
  "michelson-parser"
  "simple-utils"
  "tezos-utils"
  # from ppx_let:
  "ocaml" {>= "4.04.2" & < "4.08.0"}
  "dune"   {build & >= "1.5.1"}
  "ppxlib" {>= "0.5.0"}
]
build: [
  ["dune" "build" "-p" name]
]
